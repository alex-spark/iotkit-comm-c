
IF(NOT EXISTS "@CMAKE_SOURCE_DIR@/install_manifest.txt")
  MESSAGE(FATAL_ERROR "Cannot find install manifest: \"@CMAKE_SOURCE_DIR@/install_manifest.txt\"")
ENDIF(NOT EXISTS "@CMAKE_SOURCE_DIR@/install_manifest.txt")

FILE(READ "@CMAKE_SOURCE_DIR@/install_manifest.txt" files)
STRING(REGEX REPLACE "\n" ";" files "${files}")

FOREACH(file ${files})

    IF(${file} MATCHES "/usr/*")

        MESSAGE(STATUS "Uninstalling \"${file}\"")

        IF(EXISTS "${file}" AND ${file} MATCHES "/usr/include/iecfapi")

              EXEC_PROGRAM(
               "@CMAKE_COMMAND@" ARGS "-E remove_directory \"${file}\""
                OUTPUT_VARIABLE rm_out
                RETURN_VALUE rm_retval
                )

            IF(NOT "${rm_retval}" STREQUAL 0)
              MESSAGE(FATAL_ERROR "Problem when removing \"${file}\" permission denied execute again using sudo ")
            ENDIF(NOT "${rm_retval}" STREQUAL 0)

        ELSEIF(EXISTS "${file}")

              EXEC_PROGRAM(
               "@CMAKE_COMMAND@" ARGS "-E remove \"${file}\""
                OUTPUT_VARIABLE rm_out
                RETURN_VALUE rm_retval
                )

            IF(NOT "${rm_retval}" STREQUAL 0)
              MESSAGE(FATAL_ERROR "Problem when removing \"${file}\" permission denied execute again using sudo ")
            ENDIF(NOT "${rm_retval}" STREQUAL 0)

        ELSE(EXISTS "${file}" AND ${file} MATCHES "/usr/include/iecfapi")
            MESSAGE(STATUS "File \"${file}\" does not exist.")

        ENDIF(EXISTS "${file}" AND ${file} MATCHES "/usr/include/iecfapi")

    ELSE(${file} MATCHES "/usr/*")
          MESSAGE(STATUS "Uninstalling \"@CMAKE_SOURCE_DIR@${file}\"")

        IF(EXISTS "@CMAKE_SOURCE_DIR@${file}")

            EXEC_PROGRAM(
              "@CMAKE_COMMAND@" ARGS "-E remove \"@CMAKE_SOURCE_DIR@${file}\""
              OUTPUT_VARIABLE rm_out
              RETURN_VALUE rm_retval
              )

            IF(NOT "${rm_retval}" STREQUAL 0)
            MESSAGE(FATAL_ERROR "Problem when removing \"@CMAKE_SOURCE_DIR@${file}\" permission denied execute again using sudo ")
            ENDIF(NOT "${rm_retval}" STREQUAL 0)

        ELSEIF(IS_SYMLINK "@CMAKE_SOURCE_DIR@${file}")

            EXEC_PROGRAM(
              "@CMAKE_COMMAND@" ARGS "-E remove \"@CMAKE_SOURCE_DIR@${file}\""
              OUTPUT_VARIABLE rm_out
              RETURN_VALUE rm_retval
              )

            IF(NOT "${rm_retval}" STREQUAL 0)
              MESSAGE(FATAL_ERROR "Problem when removing \"@CMAKE_SOURCE_DIR@${file}\" permission denied execute again using sudo ")
            ENDIF(NOT "${rm_retval}" STREQUAL 0)

        ELSE(EXISTS "@CMAKE_SOURCE_DIR@${file}")
            MESSAGE(STATUS "File \"@CMAKE_SOURCE_DIR@${file}\" does not exist.")
        ENDIF(EXISTS "@CMAKE_SOURCE_DIR@${file}")
    ENDIF(${file} MATCHES "/usr/*")

ENDFOREACH(file)
